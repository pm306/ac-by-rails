<% provide(:title, "rule") %>
<h1>ルール<%= @outfit_selection_rule.id %> : <%= @outfit_selection_rule.name %></h1>

<% no_limit_text = '制限なし' %>

<table>
  <tr>
    <th>説明</th>
    <td><%= @outfit_selection_rule.description %></td>
  </tr>
  <tr>
    <th>優先度</th>
    <td><%= @outfit_selection_rule.priority %></td>
  </tr>
  <tr>
    <th>最低気温の最低値</th>
    <td><%= @outfit_selection_rule.min_temperature_lower_bound || no_limit_text %></td>
  </tr>
  <tr>
    <th>最低気温の最高値</th>
    <td><%= @outfit_selection_rule.min_temperature_upper_bound || no_limit_text %></td>
  </tr>
  <tr>
    <th>最高気温の最低値</th>
    <td><%= @outfit_selection_rule.max_temperature_lower_bound || no_limit_text %></td>
  </tr>
  <tr>
    <th>最高気温の最高値</th>
    <td><%= @outfit_selection_rule.max_temperature_upper_bound || no_limit_text %></td>
  </tr>
  <% @outfit_selection_rule.cloth_group_selections.each do |selection| %>
  <tr>
    <th><%= selection.cloth_group.name %></th>
    <td><%= selection.selection_count %>枚</td>
  <% end %>
  </tr>
</table>

<div>
  <%= back_link_to(rules_path) %>
</div>

<div>
  <%= general_delete_button("このルールを削除する", rule_path(@outfit_selection_rule)) %>
  <p>※ルール名が"default"のルールは削除することができません</p>
</div>
